            ul.nav.pull-right
              li.dropdown.pull-right
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  i.icon-about
                  | Sample Page
    // Main content starts
    .content
      // Sidebar
      .sidebar
      // Sidebar ends
      // Main bar
      .mainbar
        .pagination
          ul
            li
              a(href='#') Prev
            li
              a(href='pages?id=1') 1
            li
              a(href='pages?id=2') 2
            li
              a(href='pages?id=3') 3
            li
              a(href='pages?id=4') 4
            li
              a(href='#') Next
         each val, key in udata
          #post
            .widget.wgreen
              // Widget title
              .widget-head
                .pull-left
                  a(href="#{val.post_title}") #{val.post_title}
                .widget-icons.pull-right
                  a.wminimize(href='#')
                    i.icon-chevron-down
                  a.wclose(href='#')
                    i.icon-remove
                .clearfix
              .widget-content
                // Widget content
                .padd
                  ul.postcontent
                    // Chat by us. Use the class "by-me".
                    li.by-me
                      // Use the class "pull-left" in avatar
                      .avatar.pull-left
                        img(src='img/user.jpg', alt='')
                      .chat-content
                        // In meta area, first include "name" and then "time"
                        .chat-meta
                          | #{val.post_author.name}
                          span.pull-right #{val.post_date}
                        #post-content #{val.post_content}
                        .clearfix
        // end of post div
        // Mainbar ends
        .clearfix
      // Content ends
      // Scroll to top
      span.totop
        a(href='#')
          i.icon-chevron-up
